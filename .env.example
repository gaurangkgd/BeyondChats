# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/beyondchats
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/beyondchats

# API Configuration
API_BASE_URL=http://localhost:5000

# Groq API Key (for Phase 2 - REQUIRED)
# Get your FREE key from: https://console.groq.com/keys
# Groq is MUCH faster than OpenAI and has a generous free tier!
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google Custom Search API (for Phase 2 - OPTIONAL)
# If not provided, will use Google scraping instead
# Get keys from: https://developers.google.com/custom-search
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Scraping Configuration
BEYONDCHATS_URL=https://beyondchats.com/blogs/
