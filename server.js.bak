require('dotenv').config();
const express = require('express');
const cors = require('cors');
const morgan = require('morgan');
const connectDB = require('./config/db');
const articleRoutes = require('./routes/articles');

// Initialize Express app
const app = express();

// Connect to MongoDB
connectDB();

// Middleware
// Configure CORS so we can accept requests from the frontend deployment.
// ALLOWED_ORIGIN can be a single origin or a comma-separated list. Trailing
// slashes are ignored when matching (so https://site.app and https://site.app/ match).
const allowedOriginEnv = process.env.ALLOWED_ORIGIN || process.env.BEYONDCHATS_URL || '*';
const allowedOrigins = Array.isArray(allowedOriginEnv)
  ? allowedOriginEnv
  : String(allowedOriginEnv).split(',').map(s => s.trim().replace(/\/+$|\/$/g, ''));

app.use(cors({
  origin: (origin, callback) => {
    // Allow non-browser requests (e.g., curl, Postman) when origin is undefined
    if (!origin) return callback(null, true);
    const normalizedReqOrigin = origin.replace(/\/+$/, '');
    if (allowedOrigins.includes('*') || allowedOrigins.includes(normalizedReqOrigin)) {
      // Accept the specific request origin so the response header matches exactly
      return callback(null, true);
    }
    // Deny other origins
    return callback(null, false);
  },
  credentials: true,
}));
app.use(express.json());
app.use(express.urlencoded({ extended: true }));
app.use(morgan('dev'));

// Routes
app.get('/', (req, res) => {
  res.json({
    message: 'BeyondChats Article API',
    version: '1.0.0',
    endpoints: {
      'GET /api/articles': 'Get all articles (with pagination)',
      'GET /api/articles/:id': 'Get single article',
      'POST /api/articles': 'Create new article',
      'PUT /api/articles/:id': 'Update article',
      'DELETE /api/articles/:id': 'Delete article',
      'POST /api/articles/scrape': 'Trigger scraping'
    }
  });
});

app.use('/api/articles', articleRoutes);

// 404 Handler
app.use((req, res) => {
  res.status(404).json({
    success: false,
    message: 'Route not found'
  });
});

// Error Handler
app.use((err, req, res, next) => {
  console.error(err.stack);
  res.status(500).json({
    success: false,
    message: 'Internal server error',
    error: process.env.NODE_ENV === 'development' ? err.message : undefined
  });
});

// Start Server
const PORT = process.env.PORT || 5000;
app.listen(PORT, () => {
  console.log(`\nğŸš€ Server running on port ${PORT}`);
  console.log(`ğŸ“ API: http://localhost:${PORT}`);
  console.log(`ğŸ“š Docs: http://localhost:${PORT}\n`);
});

module.exports = app;
